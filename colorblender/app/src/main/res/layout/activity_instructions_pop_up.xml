<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".instructions_pop_up">

    <TextView
        android:id="@+id/first3"
        android:layout_width="362dp"
        android:layout_height="70dp"
        android:fontFamily="@font/buenard"
        android:text="3. Click on the &quot;Blend Colours&quot; button to get the ouptut"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashText"
        app:layout_constraintVertical_bias="0.555" />

    <TextView
        android:id="@+id/second"
        android:layout_width="358dp"
        android:layout_height="69dp"
        android:fontFamily="@font/buenard"
        android:text="2. You cannot choose both colour's to be the same"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashText"
        app:layout_constraintVertical_bias="0.334" />

    <TextView
        android:id="@+id/splashText"
        android:layout_width="351dp"
        android:layout_height="106dp"
        android:fontFamily="@font/bungee"
        android:text="Instructions"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <TextView
        android:id="@+id/first"
        android:layout_width="358dp"
        android:layout_height="69dp"
        android:fontFamily="@font/buenard"
        android:text="1. Choose any two colours from the drop down menu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashText"
        app:layout_constraintVertical_bias="0.102" />

    <Button
        android:id="@+id/close_btn"
        android:layout_width="172dp"
        android:layout_height="71dp"
        android:backgroundTint="#FFFFFF"
        android:text="Close"
        android:textColor="#673AB7"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first3" />


</androidx.constraintlayout.widget.ConstraintLayout>